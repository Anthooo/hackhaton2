{% extends 'base.html.twig' %}

{% block body %}
    <h1>Challenge</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ challenge.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ challenge.nom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ challenge.description }}</td>
            </tr>
            <tr>
                <th>Localisation</th>
                <td>{{ challenge.localisation }}</td>
            </tr>
            <tr>
                <th>Longitude</th>
                <td>{{ challenge.longitude }}</td>
            </tr>
            <tr>
                <th>Latitude</th>
                <td>{{ challenge.latitude }}</td>
            </tr>
            <tr>
                <th>Duree</th>
                <td>{{ challenge.duree }}</td>
            </tr>
            <tr>
                <th>Datecreation</th>
                <td>{% if challenge.dateCreation %}{{ challenge.dateCreation|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ challenge.image}}</td>
            </tr>
            <tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('challenge_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('challenge_edit', { 'id': challenge.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
