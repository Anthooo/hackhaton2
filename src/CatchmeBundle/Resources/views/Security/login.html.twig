{% extends "base.html.twig" %}

{% block body %}
        {% include '@Catchme/Include/navbar1.html.twig' %}

    {% block fos_user_content %}
        {% if error %}
            <div>{{ error|trans({}, 'FOSUserBundle') }}</div>
        {% endif %}



        <div class="container">
            <div class="card card-container">
                <h1>Se connecter</h1>


                <img id="profile-img" class="profile-img-card" src="{{ asset('bundles/catchme/images/catchMe.png') }}" />
                <p id="profile-name" class="profile-name-card"></p>
                <form action="{{ path("fos_user_security_check") }}" method="post" class="form-signin">
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

                    <div class="form-group">
                    <label for="username">{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}</label>
                    <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required"/>
                    </div>

                    <div class="form-group">
                    <label for="password">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}</label>
                    <input class="form-control" type="password" id="password" name="_password" required="required"/>
                    </div>


                            <input type="checkbox" id="remember_me" name="_remember_me" value="on" />

                            <label class="remember" for="remember_me">{{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}</label>

                    <input class="btn btn-info btn-block login" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}" />
                </form>
            </div>
        </div>
    {% endblock fos_user_content %}

{% endblock %}
